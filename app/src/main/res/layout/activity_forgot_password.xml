<!-- activity_forgot_password.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/forget"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius002"
        android:padding="15sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAppearance="@font/nunito_extrabold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="24dp"/>

    <EditText
        android:id="@+id/et_email_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/e_textbg"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kirim email"
        android:backgroundTint="@color/green1"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_back_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" kembali ke Login"
        android:backgroundTint="@color/green1"
        android:layout_marginTop="8dp"/>

    </LinearLayout>
</LinearLayout>