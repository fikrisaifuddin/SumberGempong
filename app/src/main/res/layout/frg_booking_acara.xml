<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:backgroundTint="@color/green1"
        app:titleTextColor="@android:color/black"
        app:title="Booking Tiket"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/top_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/e_text_white"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:src="@drawable/sg_tempat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:id="@+id/Homestay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tempat : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textSize="15sp"
                    />

                <Spinner
                    android:id="@+id/spinner_homestay"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="2dp"
                    android:layout_height="40dp"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/e_text_white"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:src="@drawable/sg_date"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:id="@+id/Tanggalin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal masuk : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/etTanggalin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:hint="Pilih Tanggal"
                    android:focusable="false"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/Tanggalout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal keluar : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/etTanggalout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:hint="Pilih Tanggal"
                    android:focusable="false"
                    android:clickable="true"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/e_text_white"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:src="@drawable/sg_wisatawan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_marginHorizontal="5dp">


                <TextView
                    android:id="@+id/pengunjung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jumlah pengunjung : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="15sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:hint="jumlah pengunjung"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/e_text_white"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="harga tiket : "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:hint="Rp."
                android:inputType="number"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:text="Oke"
                android:textColor="@color/white"
                android:backgroundTint="@color/green1"
                android:layout_marginTop="40dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
