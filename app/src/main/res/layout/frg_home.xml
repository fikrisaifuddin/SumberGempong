<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/radiusimg"
                android:contentDescription="Gambar Placeholder"
                android:scaleType="centerCrop" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/radiusabu"
                android:paddingHorizontal="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/Tiket"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/radius"
                        android:src="@drawable/sg_tiket"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking tiket"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/Acara"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/radius"
                        android:src="@drawable/sg_aacara" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking paket acara"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/homestay"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/radius"
                        android:src="@drawable/sg_acara"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking homestay"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/Umkm"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/radius"
                        android:src="@drawable/sg_umkm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UMKM"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/Wahana"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/radius"
                        android:src="@drawable/sg_wahana"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar wahana"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/radiusabu"
                android:paddingHorizontal="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cek harga tiket dan booking tempat disini"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_cek"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="cek"
                        android:backgroundTint="@color/green1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/galeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/radiusabu"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Galeri Sumber Gempong"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
