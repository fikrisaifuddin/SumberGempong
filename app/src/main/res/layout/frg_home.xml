<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homee">

    <!-- ScrollView untuk semua konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ViewPager2 untuk carousel -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/radiusimg"
                android:padding="3dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp" />

            <!-- HorizontalScrollView untuk menu -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radius"
                    android:paddingHorizontal="10dp">

                    <!-- Menu Booking Tiket -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/Tiket"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/radius"
                            android:src="@drawable/sg_tiket" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking tiket"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold" />
                    </LinearLayout>

                    <!-- Menu Booking Acara -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/Acara"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/radius"
                            android:src="@drawable/sg_aacara" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking paket acara"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold" />
                    </LinearLayout>

                    <!-- Menu Homestay -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/homestay"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/radius"
                            android:src="@drawable/sg_acara" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking homestay"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold" />
                    </LinearLayout>

                    <!-- Menu UMKM -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/Umkm"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/radius"
                            android:src="@drawable/sg_umkm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UMKM"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold" />
                    </LinearLayout>

                    <!-- Menu Wahana -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/Wahana"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/radius"
                            android:src="@drawable/sg_wahana" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daftar wahana"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Cek Harga Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/radius">

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cek harga tiket disini"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_semibold" />

                <Button
                    android:id="@+id/btn_cek"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cek"
                    android:backgroundTint="@color/green4"
                    android:fontFamily="@font/nunito_semibold" />
            </LinearLayout>

            <!-- Galeri Section -->
            <LinearLayout
                android:id="@+id/galeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/radius"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeri Sumber Gempong"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/all_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
