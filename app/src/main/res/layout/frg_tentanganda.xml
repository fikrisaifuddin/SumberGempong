<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/book002">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:backgroundTint="@color/green1"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/CustomToolbarTitleText"
        app:title="Tentang Aplikasi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/top_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radius002">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi Sumber Gempong Mobile apps"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Aplikasi ini dirancang untuk memudahkan pengguna dalam melakukan booking homestay dan pengaturan acara di wisata Sumber Gempong. Selain itu, aplikasi ini juga menyediakan informasi lengkap mengenai tiket, daftar menu dan harga makanan, oleh-oleh khas, serta berbagai wahana yang tersedia."
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius002">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ada pertanyaan atau masukan? Silahkan Hubungi Admin kami"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WA"
                android:backgroundTint="@color/green1"
                android:layout_gravity="end"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>